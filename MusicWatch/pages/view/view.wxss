/* pages/view/view.wxss */
page,.pageView{
  height: 100%;
}
.pageView{
  background-color: rgba(136, 180, 180, 0.637);
  font-family: "宋体"
}
.pageViewList{
  height: 78%
}
.audioPicture,.audioControls,.songDetails,.bottom{
  display: flex;
  justify-content: center;
}
.songDetails{
  padding: 6% 0;
  text-align: center;
  flex-direction: column;
  align-content: center;
}
.songDetails>.singerName{
  padding: 0.3rem 0;
  /* font-size: 0.8rem */
}
.audioPicture{
  height: 80%;
  padding: 30% 0;
  box-sizing: border-box
}
.audioPicture>image{
  border-radius: 50%;
  height: 400rpx;
  width: 400rpx;
}
.audioPictureAnimation{
  animation: Animation 35s linear infinite;
  -moz-animation: Animation 35s linear infinite;
  -webkit-animation: Animation 35s linear infinite;
}
@-webkit-keyframes Animation{
  0%{-webkit-transform: rotate(0deg);}
  25%{-webkit-transform: rotate(90deg);}
  50%{-webkit-transform: rotate(180deg);}
  75%{-webkit-transform: rotate(270deg);}
  100%{-webkit-transform: rotate(360deg);}
}
.audioControls{
  flex-direction: row;
  margin: 0.5rem 0;
}
.audioControls>slider{
  width: 60%;
}
.audioControls>view{
  font-size: 15px;
  margin: 0.43rem 0 0 0
}
.bottom{
  padding: 0.5rem;
  align-content: center;
}
.bottomLeft{
  height: 80rpx;
  width: 80rpx;
  padding: 0.5rem 1rem
}
.bottomIcon{
  height: 120rpx;
  width: 120rpx;
}
scroll-view{
  text-align: center;
  height: 80%;
  /* filter: blur(0.5px); */
  /* border: blur(5px); rgba(147, 212, 212, 0.637)*/
  box-shadow: 0px 30px 50px -10px rgba(136, 180, 180, 0.637) inset,0px -30px 50px -10px rgba(136, 180, 180, 0.637) inset;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.contentText{
  padding: 70% 0;
  box-sizing: border-box;
}
.currentTime{
  color: #fff;
}
.contentText>view{
  padding: 0.3rem
}
